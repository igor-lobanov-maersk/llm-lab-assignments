{
	"name": "Python 3",
	"build": {
		"dockerfile": "Dockerfile",
		"context": ".."
	},

	"customizations": {
		"vscode": {
			"extensions": [
				"shyykoserhiy.git-autoconfig",
				"ms-toolsai.jupyter",
				"ms-python.python",
				"ms-python.debugpy",
				"ms-toolsai.vscode-jupyter-cell-tags",
				"ms-toolsai.jupyter-renderers"
			]
		}
	},

	"remoteEnv": {
		"PYTHONPATH": "${containerWorkspaceFolder}/src",
		"PYTHONCOMPILED": "0"
	},

	"runArgs": [
		"--env-file",
		".devcontainer/devcontainer.env"
	]
}
